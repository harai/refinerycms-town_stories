<ul>
  <% if Admin::TownStoriesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_town_stories_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_town_story_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::TownStoriesController.sortable? and TownStory.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Town Stories"),
                 admin_town_stories_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Town Stories"),
                 admin_town_stories_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>